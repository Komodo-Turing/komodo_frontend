<h1>Create a New Timer:</h1>
<br><br>
<%= form_with url: '/timers', method: :post, local: true do |form| %>
  <%= form.hidden_field :user_id, value: @user_id %>

  <%= form.label :name %>
  <%= form.text_field :name %>
  <br><br>
  <%= form.label :duration %>
  <%= form.number_field :duration %> minutes
  <br><br>
  <%= form.label :substance %>
  <%= form.text_field :substance %>
  <br><br>
  <%= form.label :dosage %>
  <%= form.text_field :dosage %>
  <br><br>
  <%= form.label :entry_instructions %>
  <%= form.text_field :entry_instructions %>
  <br><br>
  <%= form.label :notes %>
  <%= form.text_field :notes %>
  <br><br>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <br><br>
  <%= form.submit "Create Timer" %>
<% end %>
