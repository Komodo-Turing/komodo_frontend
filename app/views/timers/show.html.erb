<%= @timer.name %>
<%= @timer.duration %>
<%= @timer.substance %>
<%= @timer.dosage %>
<%= @timer.instructions %>
<%= @timer.notes %>

<%= button_to 'Edit Timer', "/timers/#{@timer.id}/edit", method: :get %>
<%= button_to 'Delete Timer', "/timers/#{@timer.id}/delete", method: :delete %>
<%= button_to 'Start Timer', "/active_timers", params: {data: {attributes: {user_id: session[:user_id], name: @timer.name, duration: @timer.duration, substance: @timer.substance, dosage: @timer.dosage, entry_instructions: @timer.entry_instructions, notes: @timer.notes}}} method: :post %>
